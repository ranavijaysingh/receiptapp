<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/addrefer.css">
<div class="Step1 Boxing my-3">
    <h5 class="StepNo py-2 px-1">Step1: Copy Amount and Bank Account information</h5>
    <div class="name d-flex flex-row justify-content-between mx-2">
        <div for="name" class="text-secondary">Name</div>
        <div class="text-warning"><%=campground.name %></div>
    </div>
    <div class="d-flex flex-row justify-content-between mx-2">
        <label for="amount text-dark-emphasis" class="text-secondary" >Amount</label>
        <span class="text-warning"><%=campground.amount %>â‚¹</span>
    </div>   
    <div class="d-flex flex-row justify-content-between mx-2">
        <label for="upi" class="text-secondary">Upi</label>
        <span class="text-warning"><%=campground.upi %></span>
    </div>
    <div class="d-flex flex-row justify-content-between mx-2">
        <label for="ref" class="text-secondary">Ref ID</label>
        <span class="text-warning"><%=campground.ref %></span>
    </div>     
</div>
<div class="btnLinks d-flex flex-row justify-content-between">
    <a href="/transactionSlips"  class="btn btn-success">All TransactionSlips</a></button>
    <a href="/transactionSlips/<%=campground._id%>/edit" class="btn btn-secondary">Edit</a>
    <form action="/transactionSlips/<%=campground._id%>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
    </form>
    

</div>
<a href="/transactionSlips/<%=campground._id%>/addrefer">Url To Share</a>
<button id="copyUrl" value="/transactionSlips/<%=campground._id%>/addrefer" onClick= "copyFunction()"class="btn btn-primary">copy</button> 

<script>
    const copyFunction = () =>{
        let copyText = document.getElementById("copyUrl");
        navigator.clipboard.writeText(window.location.origin+copyText.value);
    }
</script>
   
    


